<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>org.gamekins.intellij</id>
    <name>Gamekins</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="philipp.straubinger@uni-passau.de" url="https://www.uni-passau.de/">University of Passau</vendor>

    <description>This is an IntelliJ plugin for Gamekins to gamify software testing</description>

    <depends>com.intellij.modules.platform</depends>
    <!--<depends>com.intellij.modules.java</depends>
    <depends>com.intellij.java</depends>-->


    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Custom Notification Group" displayType="BALLOON"/>
        <localInspection implementationClass="org.gamekins.intellij.CustomInspection"
                         displayName="Gamekins"
                         groupName="Gamekins"
                         groupKey="GroupName"
                         level="WARNING"
                         key="key"
                         groupPath="Java"
                         language="JAVA"
                         enabledByDefault="true"
        />
        <!-- Change the id to something else (e.g. Personal ID) for the control group and change the group MyBundle.properties -->
        <toolWindow factoryClass="org.gamekins.intellij.MainToolWindow" id="Gamekins"/>
        <postStartupActivity implementation="org.gamekins.intellij.ProjectActivity" />

    </extensions>

    <resource-bundle>messages.MyBundle</resource-bundle>
</idea-plugin>