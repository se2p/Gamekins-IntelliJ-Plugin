<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>org.plugin.plugin</id>
    <name>Gamekins Plugin</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="ameer.anqawe@gmail.com" url="https://www.yourcompany.com">testCompany</vendor>

    <description>This is a gamified plugin using gamekins</description>

    <depends>com.intellij.modules.platform</depends>
    <!--<depends>com.intellij.modules.java</depends>
    <depends>com.intellij.java</depends>-->


    <actions resource-bundle="messages.BasicActionsBundle">

        <action
                id="testC"
                class="org.plugin.plugin.Action"
                text="Gamekins"
                description="Run Gamekins plugin"
                icon="AllIcons.Actions.AddList">

            <add-to-group
                    group-id="ToolsMenu"
                    anchor="first"
            />

            <!--
            The second <override-text> element uses the alternate attribute
            "use-text-of-place" to define a location (EditorPopup) to use the
            same text as is used in MainMenu. It is a way to specify the use
            of an alternate menu text in multiple discrete menu groups.
            -->
            <override-text place="MainMenu" text="Gamekins"/>
            <override-text place="EditorPopup" use-text-of-place="MainMenu"/>

            <synonym text="GC"/>
            <keyboard-shortcut
                    keymap="$default"
                    first-keystroke="control G"/>

            <keyboard-shortcut
                    keymap="Mac OS X"
                    first-keystroke="control G"
                    remove="true"/>

            <keyboard-shortcut
                    keymap="Mac OS X 10.5+"
                    first-keystroke="control G"
                    replace-all="true"/>
        </action>
    </actions>


    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Custom Notification Group" displayType="BALLOON"/>
        <localInspection implementationClass="org.plugin.plugin.CustomInspection"
                         displayName="Gamekins"
                         groupName="Gamekins"
                         groupKey="GroupName"
                         level="WARNING"
                         key="key"
                         groupPath="Java"
                         language="JAVA"
                         enabledByDefault="true"
        />
        <!-- Change the id to something else (e.g. Personal ID) for the control group and change the group MyBundle.properties -->
        <toolWindow factoryClass="org.plugin.plugin.MainToolWindow" id="Gamekins"/>
        <postStartupActivity implementation="org.plugin.plugin.ProjectActivity" />

    </extensions>

    <resource-bundle>messages.MyBundle</resource-bundle>
</idea-plugin>